<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/util 
   	http://www.springframework.org/schema/util/spring-util.xsd">

	<!--<util:properties id="properties" location="file:tetris.properties"/>-->
	<context:property-placeholder location="file:tetris.properties" />

	<!-- Standard Properties BEGIN-->
	<!-- Standard Properties END-->

	<bean id="dateModel" class="com.tetris.de.DataModel">
		<constructor-arg ref="gameConfig" />
		<constructor-arg>
			<bean id="startPointBausteine" class="java.awt.Point">
				<constructor-arg index="0" type="int" value="0" />
				<constructor-arg index="1" type="int" value="0" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="gameConfig" class="com.tetris.de.GameConfig" scope="prototype">
		<constructor-arg index="0" ref="tetrisSteine" />
		<constructor-arg index="1" value="${startSpeed}" />
		<constructor-arg index="2" ref="fieldGrid" />
		<constructor-arg index="3" ref="pointhandler" />
	</bean>

	<bean id="pointhandler" class="com.tetris.de.handler.PointHandler">
		<constructor-arg index="0">
			<util:map id="pointsPerLineRemove">
				<entry key="1" value-type="java.lang.Integer" value="40" />
				<entry key="2" value-type="java.lang.Integer" value="100" />
				<entry key="3" value-type="java.lang.Integer" value="300" />
				<entry key="4" value-type="java.lang.Integer" value="1200" />
			</util:map>
		</constructor-arg>
	</bean>

	<bean id="fieldGrid" class="com.tetris.de.FieldGrid" scope="prototype" init-method="init">
		<constructor-arg index="0" value="${blocksize}"/>
		<constructor-arg index="1" value="${numberOfBlocksHorizontal}"/>
		<constructor-arg index="2" value="${numberOfBlocksVertical}" />
	</bean>

	<util:list id="tetrisSteine" value-type="java.lang.String" scope="prototype">
		<value>stoneShapeI</value>
	 	<value>stoneShapeS</value>
		<value>stoneShapeZ</value>
		<value>stoneShapeHalfPlus</value>
		<value>stoneShapeL</value>
		<value>stoneShapeLInverted</value>
		<value>stoneShapeQuader</value>
	</util:list>
	<bean id="stoneShapeI" class="com.tetris.de.TetrisStone" scope="prototype" init-method="init">
		<constructor-arg index="0" value="${blocksize}" />
		<constructor-arg index="1">
			<list>
				<value>0,0</value>
				<value>0,1</value>
				<value>0,2</value>
				<value>0,3</value>
			</list>
		</constructor-arg>
		<constructor-arg index="2" value="AFEEEE"/>
		<constructor-arg index="3" value="1"/>
		<constructor-arg index="4" value="2"/>
	</bean>
	<bean id="stoneShapeS" class="com.tetris.de.TetrisStone" scope="prototype" init-method="init">
		<constructor-arg index="0" value="${blocksize}" />
		<constructor-arg index="1">
			<list>
				<value>0,1</value>
				<value>1,1</value>
				<value>1,0</value>
				<value>2,0</value>
			</list>
		</constructor-arg>
		<constructor-arg index="2" value="2E8B57"/>
		<constructor-arg index="3" value="1.5"/>
		<constructor-arg index="4" value="1.5"/>
	</bean>
	<bean id="stoneShapeZ" class="com.tetris.de.TetrisStone" scope="prototype" init-method="init">
		<constructor-arg index="0" value="${blocksize}" />
		<constructor-arg index="1">
			<list>
				<value>0,0</value>
				<value>1,0</value>
				<value>1,1</value>
				<value>2,1</value>
			</list>
		</constructor-arg>
		<constructor-arg index="2" value="EB3D34"/>
		<constructor-arg index="3" value="1.5"/>
		<constructor-arg index="4" value="1.5"/>
	</bean>
	<bean id="stoneShapeHalfPlus" class="com.tetris.de.TetrisStone" scope="prototype" init-method="init">
		<constructor-arg index="0" value="${blocksize}" />
		<constructor-arg index="1">
			<list>
				<value>0,1</value>
				<value>1,0</value>
				<value>1,1</value>
				<value>2,1</value>
			</list>
		</constructor-arg>
		<constructor-arg index="2" value="B734EB"/>
		<constructor-arg index="3" value="1.5"/>
		<constructor-arg index="4" value="1.5"/>
	</bean>
	<bean id="stoneShapeL" class="com.tetris.de.TetrisStone" scope="prototype" init-method="init">
		<constructor-arg index="0" value="${blocksize}" />
		<constructor-arg index="1">
			<list>
				<value>0,0</value>
				<value>0,1</value>
				<value>0,2</value>
				<value>1,2</value>
			</list>
		</constructor-arg>
		<constructor-arg index="2" value="EB9834"/>
		<constructor-arg index="3" value="0.5"/>
		<constructor-arg index="4" value="1.5"/>
	</bean>
	<bean id="stoneShapeLInverted" class="com.tetris.de.TetrisStone" scope="prototype" init-method="init">
		<constructor-arg index="0" value="${blocksize}" />
		<constructor-arg index="1">
			<list>
				<value>1,0</value>
				<value>1,1</value>
				<value>1,2</value>
				<value>0,2</value>
			</list>
		</constructor-arg>
		<constructor-arg index="2" value="3455EB"/>
		<constructor-arg index="3" value="1.5"/>
		<constructor-arg index="4" value="1.5"/>
	</bean>
	<bean id="stoneShapeQuader" class="com.tetris.de.TetrisStone" scope="prototype" init-method="init">
		<constructor-arg index="0" value="${blocksize}" />
		<constructor-arg index="1">
			<list>
				<value>0,0</value>
				<value>0,1</value>
				<value>1,0</value>
				<value>1,1</value>
			</list>
		</constructor-arg>
		<constructor-arg index="2" value="EBEB34"/>
		<constructor-arg index="3" value="1"/>
		<constructor-arg index="4" value="1"/>
	</bean>
</beans> 