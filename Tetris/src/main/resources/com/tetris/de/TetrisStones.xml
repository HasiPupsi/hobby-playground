			<list>
				<value>0,0</value>
				<value>0,1</value>
				<value>0,2</value>
				<value>0,3</value>
			</list>
		</constructor-arg>
		<constructor-arg index="2" value="AFEEEE" />
		<constructor-arg index="3" value="1" />
		<constructor-arg index="4" value="2" />
	</bean>
	<bean id="stoneShapeS" class="com.tetris.de.TetrisStone"
